<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewNameOfTheRestaurant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin4"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/name"
            android:textColor="@color/midnightBlue"
            android:textSize="@dimen/textSize15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewNameOfTheRestaurantValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin4"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Value"
            android:textColor="@color/violet"
            android:textSize="@dimen/textSize15" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewAddressOfTheRestaurant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin4"
            android:layout_weight="1"
            android:fontFamily="sans-serif-smallcaps"
            android:text="@string/address"
            android:textColor="@color/midnightBlue"
            android:textSize="@dimen/textSize15"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewAddressOfTheRestaurantValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin4"
            android:layout_weight="1"
            android:textColor="@color/violet"
            android:textSize="@dimen/textSize15"
            android:text="Value" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewTableFleet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin4"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/numberOfTablesAvailable"
            android:textColor="@color/midnightBlue"
            android:textSize="@dimen/textSize15"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textViewTableFleetValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin4"
            android:layout_weight="1"
            android:textSize="@dimen/textSize15"
            android:textColor="@color/violet"
            android:text="Value" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonBookRestaurant"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/margin8"
        android:layout_marginRight="@dimen/margin8"
        android:layout_marginBottom="@dimen/margin4"
        android:textColor="@color/violet"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_curved_button_grey"
        android:text="Book" />

    <View
        android:layout_width="match_parent"
        android:background="@color/lightGrey"
        android:layout_height="@dimen/dividerHeight"/>


</LinearLayout>
